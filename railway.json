{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend/ColdEmailAPI && dotnet restore && dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd backend/ColdEmailAPI/out && dotnet ColdEmailAPI.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

